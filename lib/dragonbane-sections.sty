\ExplSyntaxOn

\newcommand{\DoDBulletGreen}{\item[\color{DoDGreen}\ding{70}]} 

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Special command for magic items, traps, and the like.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\NewDocumentCommand {\DoDHeroicAbilityHeader} { m m m }
  {
    \subsubsection {#1}
    \begin{itemize}
      \DoDBulletGreen \textcolor{DoDGreen}{Requirement:} #2
      \DoDBulletGreen \textcolor{DoDGreen}{Willpower~Points:}~#3
    \end{itemize}
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Special command for spells.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% #1 - Rank
% #2 - Prerequisite
% #3 - Requirement
% #4 - Casting time
% #5 - Range
% #6 - Duration
\NewDocumentCommand {\DoDSpellHeader} { m m m m m m m}
  {
    \subsubsection {#1}

    \begin{itemize}
      \DoDBulletGreen \textcolor{DoDGreen}{Rank:}~#2
      \DoDBulletGreen \textcolor{DoDGreen}{Prerequisite}:~#3
      \DoDBulletGreen \textcolor{DoDGreen}{Requirement:}~#4
      \DoDBulletGreen \textcolor{DoDGreen}{Casting~Time:}~#5
      \DoDBulletGreen \textcolor{DoDGreen}{Range:}~#6
      \DoDBulletGreen \textcolor{DoDGreen}{Duration:}~#7
    \end{itemize}
  }

\NewDocumentCommand {\DoDSkillHeader} { m m }
  {
    \subsubsection {#1~(\small #2)}
  }
